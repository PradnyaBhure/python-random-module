#import random module

import random

comp_guess=random.randint(1,10)  # random number generated by computer

attempts=0 # No of attempts

while True:
 
    user_guess=int(input("Guess a number from 1 to 10:"))
    attempts+=1  # Increment the attempts with every guess
        
    if user_guess < comp_guess:
        print("Too low! Try again.")
    elif user_guess > comp_guess:
        print("Too high! Try again.")
    elif user_guess == comp_guess:
        print(f"Congratulations! You've guessed the number in {attempts} attempts")
        break
    else:  
        print("Please enter a valid number.")
    
    if(attempts>=3):
        print("Sorry! Your three chances are over.")
        break

#Output:
Guess a number from 1 to 10:3
Too low! Try again.
Guess a number from 1 to 10:5
Too low! Try again.
Guess a number from 1 to 10:7
Too high! Try again.
Sorry! Your three chances are over.

#output:
Guess a number from 1 to 10:5
Too high! Try again.
Guess a number from 1 to 10:4
Too high! Try again.
Guess a number from 1 to 10:3
Congratulations! You've guessed the number in 3 attempts
